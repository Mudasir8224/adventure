<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentClasses.LoginFragment">


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:fontFamily="@font/mavenpro_semibold"
            android:text="Let's Get Started!">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/mavenpro_medium"
            android:text="Create an account to get all features">

        </TextView>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonLoginWelcome"
            android:background="@drawable/custom_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:elevation="3dp"
            android:text="Log In"
            android:fontFamily="@font/mavenpro_medium">

        </Button>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonSignUpWelcome"
            android:background="@drawable/custom_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:elevation="3dp"
            android:text="Sign Up"
            android:fontFamily="@font/mavenpro_medium">

        </Button>
    </LinearLayout>

</LinearLayout>